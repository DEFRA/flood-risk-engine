<%= render("flood_risk_engine/shared/back", back_path: back_partner_address_lookup_forms_path(@partner_address_lookup_form.token)) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @partner_address_lookup_form do |form| %>
      <%= form.govuk_error_summary link_base_errors_to: 'uprn' %>

      <h1 class="govuk-heading-l">
        <%= t(".heading") %>
      </h1>
      <legend class="govuk-visually-hidden">
        <%= t(".heading") %>
      </legend>

      <p class="govuk-body">
        <%= t(".postcode_label") %>
        <br/>
        <span class="postcode govuk-!-font-weight-bold">
          <%= @partner_address_lookup_form.temp_postcode %>
        </span>
        <%= link_to(t(".postcode_change_link"),
            back_partner_address_lookup_forms_path(@partner_address_lookup_form.token)) %>
      </p>

      <%= form.fields_for :transient_address do |f| %>
        <%= render("flood_risk_engine/shared/select_address", form: @partner_address_lookup_form, address: :transient_address, f: f) %>
      <% end %>

      <p class="govuk-body">
        <%= link_to(t(".manual_address_link"), skip_to_manual_address_partner_address_lookup_forms_path(@partner_address_lookup_form.token)) %>
      </p>
      <%= form.govuk_submit t(".next_button") %>
    <% end %>
    <%= render("flood_risk_engine/shared/os_terms_footer") %>
  </div>
</div>
