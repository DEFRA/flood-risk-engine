<%= render("flood_risk_engine/shared/back", back_path: back_partner_name_forms_path(@partner_name_form.token)) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @partner_name_form do |f| %>
      <%= render partial: "flood_risk_engine/shared/error_summary", locals: { f: f } %>

      <h1 class="govuk-heading-l">
        <%= t(".heading") %>
      </h1>
      <legend class="govuk-visually-hidden">
        <%= t(".heading") %>
      </legend>

      <p class="govuk-body">
        <%= t(".description_1") %>
      </p>

      <%= f.govuk_text_field :full_name,
                             label: { text: t(".full_name") },
                             hint: { text: t(".form_hint") },
                             width: "one-half" %>

      <%= f.govuk_submit t(".next_button") %>
    <% end %>
  </div>
</div>
