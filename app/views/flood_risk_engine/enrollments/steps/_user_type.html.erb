<div id="responsible_hint">
  <h2 class="heading-small">
    <%= t(".sub_heading") %>
  </h2>
  <p class="text">
    <%= t(".sub_section_one") %>
  </p>
  <details style="padding-bottom: 18px;" id="control_help">
    <summary><span class="summary"><%= t(".summary_heading") %></span></summary>
    <div>
      <p><%= t(".list_heading") %></p>
      <ul class="list-bullet text">
        <% (1..5).each do |number| %>
          <li><%= t(".list_item_#{number}") %></li>
        <% end %>
      </ul>
    </div>
  </details>
</div>

<div class="form-group">
  <fieldset>

    <legend class="visuallyhidden" aria-describedby="responsible_hint">
      <%= t(".heading") %>
    </legend>
    <%= form_group_and_validation(form, :org_type) do %>
      <%= f.collection_radio_buttons(
          :org_type,
          form.organisation_types,
          :first,
          :last
      ) {|b| b.label(class: "block-label") { b.radio_button + b.text } }
      %>
    <% end %>
  </fieldset>
</div>
