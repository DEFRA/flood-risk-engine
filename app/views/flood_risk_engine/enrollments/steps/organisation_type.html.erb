<%= content_for(:heading) { t(".heading") } %>

<%= render layout: 'step',
           locals: {
             form: form,
             step: step
           } do |f| %>

  <%
  types = FloodRiskEngine::Organisation::TYPES.map do |organsation_sti_class|
    i18n_key = organsation_sti_class.name.demodulize.underscore
    [
      organsation_sti_class.to_s,
      t(i18n_key, scope: 'organisation_types')
    ]
  end
  %>

  <%= f.collection_radio_buttons :type, types, :first, :last %>
<% end %>
