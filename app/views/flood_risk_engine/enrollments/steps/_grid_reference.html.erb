<fieldset>
  <legend class="visuallyhidden"><%= t(".legend") %></legend>

  <%= form_group_and_validation(form, :grid_reference) do %>
    <%= f.label :grid_reference, class: "form-label" do %>
      <%= t(".grid_reference.form_label") %>
      <span class="form-hint">
        <%= t(".grid_reference.example_hint") %>
      </span>
      <span class="form-hint">
        <%= t(".grid_reference.clarification_hint") %>
      </span>
    <% end %>
    <%=
      f.text_field(
        :grid_reference,
        class: "form-control",
        "aria-describedby" => "ngr_help"
      )
    %>
  <% end %>

  <% if form.require_dredging_length? %>
    <%= form_group_and_validation(form, :dredging_length) do %>
      <%= f.label :dredging_length, class: "form-label" do %>
        <%= t(".dredging_length.form_label")  %>
        <span class="form-hint">
          <%= t(".dredging_length.clarification_hint") %>
        </span>
      <% end %>
      <%=
        f.text_field(
          :dredging_length,
          class: "form-control",
          "aria-describedby" => "ngr_help"
        )
      %>
    <% end %>
  <% end %>

  <%= form_group_and_validation(form, :description) do %>
    <%= f.label :description, class: "form-label" do %>
      <%= t(".description.form_label")  %>
      <span class="form-hint">
        <%= t(".description.clarification_hint") %>
      </span>
    <% end %>
    <%=
      f.text_area(
        :description,
        class: "form-control",
        "aria-describedby" => "ngr_help"
      )
    %>
    <p class="text">
      <%= t(".description.length_hint", max: 500) %>
    </p>
  <% end %>

</fieldset>

<!-- Find grid reference -->
<details style="padding-bottom: 18px;" id="ngr_help">
  <summary><span class="summary"><%= t(".details.summary") %></span></summary>
  <div class="panel panel-border-narrow">
    <p>
      <%=
        t(
          ".details.tool_text",
          link: link_to(
            t(".details.tool_link"),
            "https://www.ordnancesurvey.co.uk/osmaps/",
            rel: "external",
            target: "_blank"
          )
        ).html_safe
      %>
    </p>
    <p><%= t(".details.tool_info")  %></p>
  </div>
</details>
