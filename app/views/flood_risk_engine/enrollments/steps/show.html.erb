<% page_title t("flood_risk_engine.enrollments.steps.#{step}.heading") %>

<%= render "flood_risk_engine/enrollments/back_link", form: form %>

<%= form_for form,
             as: step, # [legacy] puts form data in params[step] rather than params[flood_risk_engine_steps_step]
             url: enrollment_step_path(form.enrollment, step),
             method: :patch,
             builder: GOVUKDesignSystemFormBuilder::FormBuilder,
             class: "form" do |f| %>

  <%= f.govuk_error_summary %>

  <% partial = form.partial_to_render? ? form.partial_to_render : step.to_s %>

  <%= render partial, form: form, step: step, f: f %>

  <%= f.govuk_submit step_t(step, ".continue",  default: t("global.continue"))  if form.show_continue_button? %>
<% end %>
