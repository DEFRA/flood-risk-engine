<h1 class="govuk-heading-l">
<% if form.enrollment.partners.size <= 1 %>
  <%= t("flood_risk_engine.enrollments.steps.partnership_details.heading_single") %>
<% else %>
  <%= t("flood_risk_engine.enrollments.steps.partnership_details.heading") %>
<% end %>
</h1>

<table class="govuk-table">
  <caption class="govuk-table__caption govuk-table__caption--m">
    <%= t(".sub_heading") %>
  </caption>
  <thead>
    <th scope="col" class="govuk-visually-hidden">
      Name
    </th>
    <th scope="col" class="govuk-visually-hidden">
      Address
    </th>
    <th scope="col" class="govuk-visually-hidden">
      Remove
    </th>
  </thead>
  <tbody class="govuk-table__body">
    <% form.enrollment.partners.each do |partner| %>
      <tr class="govuk-table__row">
        <td class="govuk-table__cell"><%= partner.full_name %></td>
        <td class="govuk-table__cell">
          <% partner.address.parts.each do |address_part| %>
            <%= address_part %><br />
          <% end %>
        </td>
        <td class="govuk-table__cell govuk-table__cell--numeric">
          <%= link_to(
                enrollment_partner_path(form.enrollment, partner),
                class: "link",
                method: :delete,
                data: {:confirm => t(".confirm_delete", name: partner.full_name)}
              ) do %>
            <%= t(".remove") %>
          <span class="govuk-visually-hidden"><%= partner.full_name %></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>

<p class="govuk-body">
  <%= link_to t(".add_another"), edit_enrollment_partner_path(@enrollment, :partnership) %>
</p>
