<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">
      <%= t(".heading") %>
    </h1>
    <div class="govuk-warning-text">
      <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
      <strong class="govuk-warning-text__text">
        <span class="govuk-warning-text__assistive">
          <%= t(".warning.heading") %>
        </span>
        <%= t(".warning.text") %>
      </strong>
    </div>
    <p class="govuk-body"><%= t(".confirmation.heading")  %></p>
    <ul class="govuk-list govuk-list--bullet">
      <li><%= t(".confirmation.list.one") %></li>
      <li><%= t(".confirmation.list.two") %></li>
    </ul>
    <h2 class="govuk-heading-m"><%= t(".use_of_info.header") %></h2>
    <p class="govuk-body"><%= t(".use_of_info.text") %></p>
    <p class="govuk-body">
      <%=
        t(
            ".privacy.text",
            link:
                link_to(t(".privacy.link"), enrollment_page_path(form.enrollment, id: "privacy_policy"), target: "_blank")
        ).html_safe
      %>
    </p>
  </div>
</div>
