<fieldset>

  <legend class="visuallyhidden"><%= t('.legend') %></legend>

  <%= form_group_and_validation(form, form.params_key) do %>
      <div class="form-group">
        <label class="form-label" for="authority-name"><%= t('.label') %></label>
        <p class="form-hint"><%= t('.para_text') %></p>
        <%= f.text_field :name, class:  'form-control' %>
      </div>
  <% end %>

</fieldset>

