<% errors = local_assigns[:errors] || form.errors || [] %>
<% if errors.any? %>
  <div class="grid-row">
    <div class="column-two-thirds">
      <div class="error-summary" role="group" tabindex="-1">

        <h1 class="heading-medium error-summary-heading" id="error-summary-heading">
          <%= t 'errors.problems_to_fix' %>
        </h1>

        <ul class="error-summary-list">
          <% errors.each do |error| %>
            <li>
              <%= link_to error.message.html_safe, "##{error_link_id(error.attribute)}", class: "error-text" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
