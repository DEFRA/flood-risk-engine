<%= link_to(
      "Back",
      enrollment_step_path(form.enrollment, form.enrollment.previous_step),
    ) if form.enrollment.can?(:go_back)
%>

<%= form.inspect %>

<div class="grid-row">
  <div class="column-two-thirds">

    <%= render "flood_risk_engine/enrollments/header", title_text: t(".heading") %>
    <%= render 'flood_risk_engine/enrollments/validation_errors', form: form %>

    <%= form_for(
          form,
          as: :address,
          url: enrollment_address_path(form.enrollment, form.model),
          class: "form"
        ) do |f| %>

      <p>
        <span class="postcode-prefix"><%= t(".postcode.prefix") %></span>
        <span class="visuallyhidden"><%= t(".postcode.separator") %></span>
        <span class="postcode"><%= form.model.postcode %></span>
        <a href="" class="change-postcode-button">
          <%=
            t(
              ".postcode.change_button.text",
              hidden: content_tag(
                'span',
                t(".postcode.change_button.hidden"),
                class: "visuallyhidden"
              )
            ).html_safe
          %>
        </a>
      </p>

      <!-- Manually entered address -->
      <fieldset>
        <legend class="visuallyhidden"><%= t(".legend") %></legend>

        <div class="form-group">
          <%= f.label :premises, class: "form-label" do %>
            <%= t(".premises.label") %>
            <span class="form-hint"><%= t(".premises.hint") %></span>
          <% end %>
          <%= f.text_field :premises, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :street_address, t(".street_address"), class: "form-label" %>
          <%= f.text_field :street_address, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :locality, t(".locality"), class: "form-label" %>
          <%= f.text_field :locality, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :city, t(".city"), class: "form-label" %>
          <%= f.text_field :city, class: "form-control" %>
        </div>
      </fieldset>

      <!-- Primary button -->
      <div class="form-group">
        <%= f.submit t("global.continue"), class: "button"  %>
      </div>

    <% end #form %>
  </div>
</div>