<%= render("flood_risk_engine/shared/back", back_path: back_partner_address_manual_forms_path(@partner_address_manual_form.token)) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @partner_address_manual_form do |f| %>
      <%= render partial: "flood_risk_engine/shared/error_summary", locals: { f: f } %>
      <% if @partner_address_manual_form.address_finder_error %>
        <div class="govuk-error-summary">
          <h2 class="govuk-heading-m"><%= t(".address_finder_error_heading") %></h2>
          <p class="govuk-body"><%= t(".address_finder_error_text") %></p>
        </div>
      <% end %>

      <h1 class="govuk-heading-l">
        <%= t(".heading") %>
      </h1>
      <legend class="govuk-visually-hidden">
        <%= t(".heading") %>
      </legend>

      <p class="govuk-body">
        <%= t(".preset_postcode_label") %>
      <br/>
      <span class="postcode govuk-!-font-weight-bold">
        <%= @partner_address_manual_form.postcode %>
      </span>
      <%= link_to(t(".postcode_change_link"), back_partner_address_manual_forms_path(@partner_address_manual_form.token)) %>
      </p>
      <%= f.fields_for :transient_address do |f| %>
        <%= render("flood_risk_engine/shared/manual_address", form: @partner_address_manual_form, f: f) %>
      <% end %>
      <%= f.govuk_submit t(".next_button") %>
    <% end %>
  </div>
</div>
