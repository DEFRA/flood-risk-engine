<% content_for :title, t(".title.#{@company_address_lookup_form.business_type}") %>

<%= render("flood_risk_engine/shared/back", back_path: back_company_address_lookup_forms_path(@company_address_lookup_form.token)) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @company_address_lookup_form do |form| %>
      <%= form.govuk_error_summary link_base_errors_to: 'uprn' %>

      <h1 class="govuk-heading-l">
        <%= t(".heading.#{@company_address_lookup_form.business_type}") %>
      </h1>
      <legend class="govuk-visually-hidden">
        <%= t(".heading.#{@company_address_lookup_form.business_type}") %>
      </legend>

      <p class="govuk-body">
        <%= t(".postcode_label") %>
        <br/>
        <span class="postcode govuk-!-font-weight-bold">
          <%= @company_address_lookup_form.temp_company_postcode %>
        </span>
        <%= link_to(t(".postcode_change_link"),
            back_company_address_lookup_forms_path(@company_address_lookup_form.token)) %>
      </p>

      <%= form.fields_for :company_address do |f| %>
        <%= render("flood_risk_engine/shared/select_address", form: @company_address_lookup_form, address: :company_address, f: f) %>
      <% end %>

      <p class="govuk-body">
        <%= link_to(t(".manual_address_link"), skip_to_manual_address_company_address_lookup_forms_path(@company_address_lookup_form.token)) %>
      </p>
      <%= form.govuk_submit t(".next_button") %>
    <% end %>
    <%= render("flood_risk_engine/shared/os_terms_footer") %>
  </div>
</div>
