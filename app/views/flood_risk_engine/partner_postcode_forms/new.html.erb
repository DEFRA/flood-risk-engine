<% content_for :page_title, t(".title") %>

<%= render("flood_risk_engine/shared/back", back_path: back_partner_postcode_forms_path(@partner_postcode_form.token)) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @partner_postcode_form do |f| %>
      <%= render partial: "flood_risk_engine/shared/error_summary", locals: { f: f } %>
      <h1 class="govuk-heading-l">
        <%= t(".heading") %>
      </h1>
      <legend class="govuk-visually-hidden">
        <%= t(".heading") %>
      </legend>
      <%= f.govuk_text_field :temp_postcode,
          width: "one-half",
          label: {
            text: t(".temp_partner_postcode_label")
          },
          hint: {
            text: t(".temp_partner_postcode_hint")
          } %>
      <%= f.govuk_submit t(".next_button") %>
    <% end %>

    <% if @partner_postcode_form.errors.added?(:temp_postcode, :no_results) %>
      <div class="govuk-body">
        <%= link_to(t(".manual_address_link"), skip_to_manual_address_partner_postcode_forms_path(@partner_postcode_form.token)) %>
      </div>
    <% end %>

    <%= render("flood_risk_engine/shared/os_terms_footer") %>
  </div>
</div>
