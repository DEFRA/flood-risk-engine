<%= render("flood_risk_engine/shared/back", back_path: back_company_postcode_forms_path(@company_postcode_form.token)) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @company_postcode_form do |f| %>
      <%= render partial: "flood_risk_engine/shared/error_summary", locals: { f: f } %>
      <h1 class="govuk-heading-l">
        <%= t(".heading.#{@company_postcode_form.business_type}") %>
      </h1>
      <legend class="govuk-visually-hidden">
        <%= t(".heading.#{@company_postcode_form.business_type}") %>
      </legend>
      <%= f.govuk_text_field :temp_company_postcode,
          width: "one-half",
          label: {
            text: t(".temp_company_postcode_label")
          },
          hint: {
            text: t(".temp_company_postcode_hint")
          } %>
      <%= f.govuk_submit t(".next_button") %>
    <% end %>
    <%= render("flood_risk_engine/shared/os_terms_footer") %>
  </div>
</div>
